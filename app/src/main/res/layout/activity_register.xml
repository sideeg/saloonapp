<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activites.RegisterActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_gravity="center_horizontal"

        android:src="@drawable/ic_saloon_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:id="@+id/base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" >


    <EditText
        android:id="@+id/regUserName"
        android:layout_width="@dimen/login_username_width"
        android:layout_height="@dimen/login_username_height"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="your name"
        android:maxLines="1"
        android:textSize="@dimen/login_email_text_size"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_user"
        />
        <EditText
        android:id="@+id/reg_user_phone"
        android:layout_width="@dimen/login_username_width"
        android:layout_height="@dimen/login_username_height"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="your phone"
        android:maxLines="1"
        android:textSize="@dimen/login_email_text_size"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_phone"
        />
        <EditText
        android:id="@+id/edtUserName"
        android:layout_width="@dimen/login_username_width"
        android:layout_height="@dimen/login_username_height"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:hint="add email"
        android:maxLines="1"
        android:textSize="@dimen/login_email_text_size"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_email"
        />

    <EditText
        app:boxBackgroundMode="none"
        android:id="@+id/edtUserPassword"
        android:layout_width="@dimen/login_password_width"
        android:layout_height="@dimen/login_password_height"
        android:hint="password"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/login_password_text_size"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_lock_outline"
        android:padding="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:layout_marginTop="0dp"
        android:layout_marginStart="25dp"

        android:textColor="@color/quantum_black_text"
        android:text="Saloon Logo"
        app:layout_constraintTop_toBottomOf="@id/base"
        android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_saloon_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/imageview_border"
        >


        <ImageView
            android:id="@+id/iv_saloon_logo_Pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"

            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_add__photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/quantum_black_text"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="click here to add Saloon Logo" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:layout_marginTop="0dp"
        android:layout_marginStart="25dp"

        android:textColor="@color/quantum_black_text"
        android:text="Commerical Register"
        app:layout_constraintTop_toBottomOf="@id/base"
        android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_commerical_register"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/imageview_border"
        >


        <ImageView
            android:id="@+id/ivcommerical_register_Pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"

            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_add__photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/quantum_black_text"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="click here to add commerical register" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_star_black_24dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:layout_marginTop="0dp"
        android:layout_marginStart="25dp"

        android:textColor="@color/quantum_black_text"
        android:text="Saloon Logo"
        app:layout_constraintTop_toBottomOf="@id/base"
        android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_roshita"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/imageview_border"
        >


        <ImageView
            android:id="@+id/ivUserroshitaPic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"

            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_add__photo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/quantum_black_text"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="click here to add Saloon Logo" />
    </LinearLayout>


</LinearLayout>